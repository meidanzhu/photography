<%= link_to "Add new Category", new_category_path %>

<%= form_for([@category, @photo]) do |f| %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :caption%>
    <%= f.text_field :caption%>
    <br>
    <%= f.label :category, "Select a Category:" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: 'Select One' %>
    <br>
    
    <%= f.submit %>
<% end %> 